{
  "name": "@lightscript/eslint",
  "version": "4.0.0-alpha.1",
  "description": "LightScript parser for ESLint, based on babel-eslint",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wcjohnson/lightscript-eslint.git"
  },
  "dependencies": {
    "@babel/code-frame": "^7.0.0",
    "@lightscript/transform": "4.0.0-alpha.1",
    "eslint-scope": "^4.0.0",
    "eslint-visitor-keys": "^1.0.0"
  },
  "scripts": {
    "build": "run-s build:plain",
    "build:plain": "babel -x \".js\",\".lsc\" src --out-dir lib",
    "build:runner": "babel -x \".lsc\" test/helpers --out-dir test/helpers",
    "test": "run-s build test:only",
    "test:only": "run-s test:mocha test:jest",
    "test:mocha": "mocha",
    "test:jest": "jest",
    "preversion": "run-s test",
    "changelog": "git log `git describe --tags --abbrev=0`..HEAD --pretty=format:' * %s (%an)' | grep -v 'Merge pull request'"
  },
  "homepage": "http://wcjohnson.github.io/lightscript",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "bugs": {
    "url": "https://github.com/wcjohnson/lightscript/issues"
  },
  "devDependencies": {
    "dedent": "^0.7.0",
    "eslint": "npm:eslint@5.6.0",
    "eslint-config-babel": "^7.0.1",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.1.2",
    "espree": "^3.5.2",
    "lint-staged": "^7.2.2",
    "mocha": "^5.0.1",
    "jest": "^23.6.0",
    "prettier": "^1.4.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "@oigroup/babel-preset-lightscript": "^3.1.1",
    "npm-run-all": "^4.1.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --format=codeframe --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "lsc"
    ],
    "transform": {
      "\\.lsc$": "<rootDir>/lightscript.jest.js"
    },
    "testRegex": "test/index\\.lsc$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  }
}
